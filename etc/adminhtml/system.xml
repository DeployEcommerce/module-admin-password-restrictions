<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="admin">
            <group id="security">
                <field id="minimum_password_length" translate="label comment" sortOrder="100" showInDefault="1" canRestore="1">
                    <label>Minimum Length of Admin Password</label>
                    <comment>The minimum length of an admin users password.</comment>
                    <validate>validate-zero-or-greater validate-digits</validate>
                </field>
            </group>
        </section>
    </system>
</config>
